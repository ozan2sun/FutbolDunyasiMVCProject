@model Oyuncu
@{
    //Layout'a veri taşımaya yarar
    ViewData["Title"] = "Oyuncu Silme Onayı";
}

<form method="post">
    <input asp-for="Id" type="hidden" />
    <h1>Silme Onayı</h1>
    <p>&quot;@Model.Ad&quot; adlı oyuncuyu silmek istediğinize emin misiniz? </p>
    <a class="btn btn-secondary" asp-action="Index">Listeye Geri Dön</a>
    <button class="btn btn-danger">Evet, Sil</button>
</form>
